package server.util

/**
  * Created by davidetommasin on 10/05/2016.
  */
object Help{

  val helpMessages = List( "LISTDB                lists all available databases\n ",
    "SELECTDB  nameDB      select the database\n",
    "CREATEDB  nameDB      create the database with the name specied\n",
    "DELETEDB  nameDB      clears the databse with the name specied\n",
    "LIST                  lists all maps within the database\n",
    "SELECT    map         select the map to use\n",
    "CREATE    map         creates the map with the name specied\n",
    "DELETE    map         deletes the map the name specied\n",
    "KEYS                  lists all the keys in the map\n",
    "FIND      key         returns the value associated with the key searched\n",
    "REMOVE    key         deletes the key and its value\n",
    "INSERT    key value   insertion of a key and its value in a previously selected database\n",
    "UPDATE    key value   update of a key and its value in a previously selected database\n"
  )

  def CompleteHelp(): String = {
    var helpComplete = ""
    for(i <- 0 to helpMessages.length){
      helpComplete += helpMessages.take(i)
    }//for i
    return helpComplete
  }//CompleteHelp

  def SpecificHelp(command:String): String = {
    command match {
      case "listdb" => return ""+helpMessages.take(1)
      case "selectdb" => return ""+helpMessages.take(2)
      case "createdb" => return ""+helpMessages.take(3)
      case "deletedb" => return ""+helpMessages.take(4)
      case "list" => return ""+helpMessages.take(5)
      case "select" => return ""+helpMessages.take(6)
      case "create" => return ""+helpMessages.take(7)
      case "delete" => return ""+helpMessages.take(8)
      case "keys" => return ""+helpMessages.take(9)
      case "find" => return ""+helpMessages.take(10)
      case "remove" => return ""+helpMessages.take(11)
      case "insert" => return ""+helpMessages.take(12)
      case "update" => return ""+helpMessages.take(13)
    }//match command
  }//SpecificHelp

}//Help